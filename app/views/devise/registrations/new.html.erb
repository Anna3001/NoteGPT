<%= render partial: 'partials/header' %>

<div class="flex items-center min-h-screen bg-white dark:bg-white">
  <div class="container mx-auto">
    <div class="max-w-md mx-auto my-10">
      <div class="text-center">
        <h2 class="my-3 text-5xl font-semibold text-gray-700 dark:text-black">Sign up</h2>
        <p class="text-gray-500 dark:text-gray-400">Create your account</p>
      </div>
      <div class="m-7">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form" }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="mb-6">
            <%= f.label :email, class: "block mb-2 text-sm font-medium text-gray-700 dark:text-gray-400" %>
            <%= f.email_field :email, class: "w-full px-4 py-2 placeholder-gray-300 border rounded-md bg-gray-100 bg-gray-300 dark:text-white dark:placeholder-gray-500 dark:border-gray-300 dark:focus:ring-gray-900 dark:focus:border-gray-500", autofocus: true, autocomplete: "email" %>
          </div>
          <div class="mb-6">
            <%= f.label :password, class: "block mb-2 text-sm font-medium text-gray-700 dark:text-gray-400" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, class: "w-full px-4 py-2 placeholder-gray-300 border rounded-md bg-gray-100 bg-gray-300 dark:text-white dark:placeholder-gray-500 dark:border-gray-300 dark:focus:ring-gray-900 dark:focus:border-gray-500", autocomplete: "new-password" %>
          </div>
          <div class="mb-6">
            <%= f.label :password_confirmation, class: "block mb-2 text-sm font-medium text-gray-700 dark:text-gray-400" %>
            <%= f.password_field :password_confirmation, class: "w-full px-4 py-2 placeholder-gray-300 border rounded-md bg-gray-100 bg-gray-300 dark:text-white dark:placeholder-gray-500 dark:border-gray-300 dark:focus:ring-gray-900 dark:focus:border-gray-500", autocomplete: "new-password" %>
          </div>
          <div class="mb-6">
            <button type="submit" class="w-full px-4 py-2 text-black bg-yellow-500 rounded-md hover:bg-yellow-600 focus:bg-yellow-600 focus:outline-none">Sign up</button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
