<%= render partial: 'partials/header' %>

<div class="flex items-center min-h-screen bg-white dark:bg-white">
  <div class="container mx-auto">
    <div class="max-w-md mx-auto my-10">
      <div class="text-center">
        <h1 class="my-3 text-5xl font-semibold text-gray-700 dark:text-black">Sign in</h1>
        <p class="text-gray-500 dark:text-gray-400">Sign in to access your account</p>
      </div>
      <div class="m-7">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="mb-6">
            <%= f.label :email, class: "block mb-2 text-sm font-medium text-gray-700 dark:text-gray-400" %>
            <%= f.email_field :email, id: "email", class: "w-full px-4 py-2 placeholder-gray-300 border rounded-md bg-gray-100 bg-gray-300 dark:text-white dark:placeholder-gray-500 dark:border-gray-300 dark:focus:ring-gray-900 dark:focus:border-gray-500", placeholder: "you@company.com", autocomplete: "email" %>
          </div>
          <div class="mb-6">
            <div class="flex justify-between mb-2">
              <%= f.label :password, class: "text-sm font-medium text-gray-700 dark:text-gray-400" %>
              <a href="#!" class="text-sm text-gray-400 focus:outline-none focus:text-yellow-600 hover:text-yellow-600 dark:hover:text-yellow-300">Forgot password?</a>
            </div>
            <%= f.password_field :password, id: "password", class: "w-full px-4 py-2 placeholder-gray-300 border rounded-md bg-gray-100 bg-gray-300 dark:text-white dark:placeholder-gray-500 dark:border-gray-300 dark:focus:ring-gray-900 dark:focus:border-gray-500", placeholder: "Password", autocomplete: "current-password" %>
          </div>
          <div class="mb-6">
            <% if devise_mapping.rememberable? %>
              <div class="py-6">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>
            <button type="submit" class="w-full px-4 py-2 text-black bg-yellow-500 rounded-md hover:bg-yellow-600 focus:bg-yellow-600 focus:outline-none">Sign in</button>
          </div>
          <p class="text-lg text-center text-gray-500 dark:text-gray-400">Don't have an account yet? <%= link_to "Sign up", new_user_registration_path, class: "text-yellow-600 focus:outline-none focus:underline focus:text-yellow-700 dark:focus:border-yellow-600" %>.</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
